{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "strict": true,
        "paths": {
            "@/assets/*": ["src/assets/*"],
            "@/components/*": ["src/components/*"],
            "@/data/*": ["src/data/*"],
            "@/layouts/*": ["src/layouts/*"],
            "@/pages/*": ["src/pages/*"],
            "@/styles/*": ["src/styles/*"]
        }
    }
}
