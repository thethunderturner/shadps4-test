---
import Header from '../components/Header.jsx';
import "../styles/global.css";
import {Image} from 'astro:assets';
import shadPS4Logo from '/src/assets/shadPS4Logo.png';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header client:load>
			<Image src={shadPS4Logo} alt="A bird sitting on a nest of eggs." class="h-12 w-auto rounded-lg" loading="eager" />
		</Header>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
