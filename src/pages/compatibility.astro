---
import Layout from '../layouts/Layout.astro';
import {FaWindows, FaLinux, FaApple} from 'react-icons/fa';
import CompatibilityCard from '../components/compatibility/CompatibilityCard.astro';
import CompatTable from '../components/compatibility/CompatibilityTable.tsx';
import {startLinux, startWin, startMac} from '../components/compatibility/utils.tsx';
---

<Layout title="Compatibility">
    <div class="flex justify-center gap-16">
        <!--Windows Tab-->
        <CompatibilityCard name="Windows" osStart={startWin}>
            <FaWindows slot="icon" className="size-12 fill-gray-600 dark:fill-white" />
        </CompatibilityCard>

        <!--Linux Tab-->
        <CompatibilityCard name="Linux" osStart={startLinux}>
            <FaLinux slot="icon" className="size-12 fill-gray-600 dark:fill-white" />
        </CompatibilityCard>

        <!--macOS Tab-->
        <CompatibilityCard name="macOS" osStart={startMac}>
            <FaApple slot="icon" className="size-12 fill-gray-600 dark:fill-white" />
        </CompatibilityCard>
    </div>
    <CompatTable client:load />
</Layout>
