---
import AboutPopover from './AboutPopover.tsx';
import GalleryPopover from './GalleryPopover.tsx';
import ThemeIcon from './ThemeIcon.astro';
import {pages, external} from '@/data/navigation.ts';
import MobileSidebar from './MobileSidebar.tsx';
---

<header class="sticky top-0 z-50 w-full border-b border-border bg-header">
    <nav class="mx-auto flex h-16 w-full max-w-[1850px] items-center justify-between px-4 sm:px-6 lg:px-8">
        <div class="hidden flex-row gap-x-4 lg:flex">
            {
                pages.map(item => (
                    <a href={item.href} class="text-lg/6 font-semibold text-text">
                        {item.name}
                    </a>
                ))
            }
            <GalleryPopover client:load />
            <AboutPopover client:load />
        </div>
        <div class="hidden flex-row items-center gap-x-2 lg:flex">
            <div class="flex flex-row gap-x-2">
                {
                    external.map(item => (
                        <a aria-label={item.name} href={item.href} class="text-text transition hover:text-white">
                            <item.icon className="size-6" />
                        </a>
                    ))
                }
            </div>
            <div class="h-6 w-px bg-gray-700 dark:bg-gray-600"></div>
            <ThemeIcon />
        </div>

        <!-- Mobile trigger -->
        <MobileSidebar client:load />
    </nav>
</header>
