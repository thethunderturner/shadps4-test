---

import shadPS4Logo from '/src/assets/shadPS4Logo.png';
import {Image} from 'astro:assets';
import AboutPopover from './AboutPopover.astro';
import GalleryPopover from './GalleryPopover.astro';

const pages = [
    {name: 'Home', href: '/'},
    {name: 'Downloads', href: '/downloads'},
    {name: 'Quickstart', href: '/quickstart'},
    {name: 'Forums', href: '/forums'},
    {name: 'Compatibility', href: '/compatibility'},
    {name: 'FAQ', href: '/faq'},
];
---

<header>
    <nav class="mb-16 flex h-16 w-full items-center justify-between border-b border-border bg-header px-4">
        <!-- Logo -->
        <div class="flex items-center gap-x-2 lg:flex-row w-fit">
            <Image
                src={shadPS4Logo}
                alt="shadps4_logo"
                class="h-12 w-auto rounded-lg"
                loading="eager"
            />
            <span class="text-2xl/6 font-semibold text-white">ShadPS4</span>
        </div>

        <!-- Menu -->
        <div class="hidden flex-row gap-x-4 lg:flex">
            {pages.map(item => (
                <a href={item.href} class="text-base/6 font-semibold text-white">
                    {item.name}
                </a>
            ))}
            <GalleryPopover />
            <AboutPopover />
        </div>

        <!-- Tags -->
        <div class="hidden flex-row justify-evenly gap-x-4 lg:flex">
            <div class="size-7 bg-white"></div>
            <div class="size-7 bg-white"></div>
            <div class="size-7 bg-white"></div>
            <div class="size-7 bg-white"></div>
            <div class="size-7 bg-white"></div>
        </div>

        <!-- Mobile trigger -->
        <div class="block size-7 bg-white lg:hidden"></div>
    </nav>
</header>