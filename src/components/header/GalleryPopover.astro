---
const gallery = [
    {name: 'Photos', href: '/shadps4-test/gallery/photos'},
    {name: 'Videos', href: '/shadps4-test/gallery/videos'},
];
import {MdKeyboardArrowDown} from 'react-icons/md';
---

<div class="relative">
    <button
        popovertarget="gallery-popover"
        class="inline-flex items-center [anchor-name:--gallery]"
        id="popover-button-1"
        type="button"
        aria-haspopup="true"
        aria-controls="gallery-popover"
        aria-expanded="false"
    >
        <span class="text-base/6 font-semibold text-text">Gallery</span>
        <MdKeyboardArrowDown className=" text-text size-5" />
    </button>

    <el-popover
        id="gallery-popover"
        anchor="bottom"
        popover=""
        aria-labelledby="gallery-btn"
        class="border-border bg-header z-50 w-screen max-w-54 overflow-hidden rounded-lg border shadow-xl [position-anchor:--gallery] [top:anchor(bottom)] [left:anchor(left)] mt-3"
    >
        <div class="flex flex-col p-2">
            {
                gallery.map(item => (
                    <a href={item.href}>
                        <span class="block p-2 font-semibold text-text">{item.name}</span>
                    </a>
                ))
            }
        </div>
    </el-popover>
</div>
