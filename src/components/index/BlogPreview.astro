---
import {getCollection} from 'astro:content';
import {Image} from 'astro:assets';
import defaultImage from '../../assets/images/default-hero-image.jpg'
const allPosts = await getCollection('blog');

// sort by Date (top 3)
const recentPosts = allPosts.sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()).slice(0, 3);
---

<div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
    {
        recentPosts.map(post => (
            <article class="flex max-w-xl flex-col items-start justify-between">
                <a class="overflow-hidden rounded-lg w-full" href={`/shadps4-test/blog/${post.slug}`}>
                    <Image
                        src={post.data.heroImage ?? defaultImage}
                        alt={post.data.title}
                        class="aspect-video w-full object-cover hover:scale-105 ease-in-out transition duration-300"
                    />
                </a>

                <div class="flex items-center gap-x-4 text-xs pt-4">
                    <div class="text-gray-400">
                        {post.data.pubDate.toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric',
                        })}
                    </div>

                    <div class="flex gap-2">
                        {post.data.tags && post.data.tags.map(tag => (
                            <span class="rounded-full border-border border bg-compat-card px-2 py-0.5 text-xs font-medium text-gray-500">{tag}</span>
                        ))}
                    </div>
                </div>

                <div class="group relative grow">
                    <h3 class="mt-3 text-lg/6 font-semibold text-white">
                        <a href={`/shadps4-test/blog/${post.slug}`}>{post.data.title}</a>
                    </h3>
                    <p class="mt-5 line-clamp-3 text-sm/6 text-gray-400">{post.data.description}</p>
                </div>
            </article>
        ))
    }
</div>
