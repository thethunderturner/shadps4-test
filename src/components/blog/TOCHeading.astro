---
import type {Heading} from './TableOfContents.astro';

interface Props {
    heading: Heading;
}

const {heading} = Astro.props;
---

<li class="flex flex-col gap-2">
    <a href={'#' + heading.slug} class="toc-link block text-gray-500 hover:text-white transition-colors duration-200 text-sm no-underline">
        {heading.text}
    </a>

    {
        heading.subheadings.length > 0 && (
            <ul class="ml-1 pl-4 border-l border-gray-700 flex flex-col gap-2">
                {heading.subheadings.map(subheading => (
                    <Astro.self heading={subheading} />
                ))}
            </ul>
        )
    }
</li>
